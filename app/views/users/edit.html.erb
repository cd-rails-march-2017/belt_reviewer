<div class="container">
  <p class="pull-right"><a href="/events">Events Dashboard</a> | <a href="/sessions" data-method="delete">Logout</a>
  <h3>Edit Your Profile</h3>
  <% if flash[:notice] %>
    <% flash[:notice].each do |n| %>
      <p class="text-danger"><%= n %></p>
    <% end %>
  <% end %>
  <div id="editprofile" class="col-md-6">
    <%= form_tag("/users/#{@user.id}", method: "patch") do %>
      <div class="form-group">
        <%= label_tag(:first_name, "First Name:") %>
        <%= text_field_tag(:first_name, "#{@user.first_name}") %>
      </div>
      <div class="form-group">
        <%= label_tag(:last_name, "Last Name:") %>
        <%= text_field_tag(:last_name, "#{@user.last_name}") %>
      </div>
      <div class="form-group">
        <%= label_tag(:email, "Email:") %>
        <%= text_field_tag(:email, "#{@user.email}") %>
      </div>
      <div class="form-group">
        <%= label_tag "Location:" %>
        <%= text_field_tag(:city, "#{@user.city}") %>
        <%= select_tag(:state, options_for_select(us_states, @user.state)) %>
      </div>
      <%= submit_tag("Update Records") %>
    <% end %>
  </div>

</div>
